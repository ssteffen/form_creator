<% if @field_hash.nil? || @field_hash.empty? || @field_hash[:date_select_format].nil? || @field_hash[:time_select_format].nil? %>
	Date Format: <%= select_tag 'info[date_select_format]', options_for_select([['mm/dd/yyyy'], 'Month dd, yyyy', 'mm/dd/yy', 'yyyy', 'mm/yyyy', 'Month', 'Day']) %>
	Time Format: <%= select_tag 'info[time_select_format]', options_for_select([["hour:minute (AM/PM)"], 'hour:minute (24 hr)', 
															'hour:minute:second (AM/PM)', 'hour:minute:second (24 hr)']) %>&nbsp;
	Required Field: <%= check_box_tag 'info[required_field]', 'Yes'%>
<% else %>
	Date Format: <%= select_tag 'info[date_select_format]', options_for_select([['mm/dd/yyyy'], 'Month dd, yyyy', 'mm/dd/yy', 'yyyy', 'mm/yyyy', 'Month', 'Day'], @field_hash[:date_select_format])%>
	Time Format: <%= select_tag 'info[time_select_format]', options_for_select([["hour:minute (AM/PM)"], 'hour:minute (24 hr)', 
															'hour:minute:second (AM/PM)', 'hour:minute:second (24 hr)'], @field_hash[:time_select_format]) %>
	Required Field: <%= check_box_tag 'info[required_field]', 'Yes', if @field_hash[:required_field] == 'Yes' then true end %>
<% end %>