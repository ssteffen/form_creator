      %table
        %tr
          %th First Choice
          %th Second Choice
        %tr
          %td
            %ul.table
              %li
                %strong Evergreen Terrace
              %li
                = radio_button_tag 'apartment_application[preference_1]', 'Evergreen-2',                                                           |
                  if @apartment_application[:preference_1] == "Evergreen-2" || @apartment_application[:preference_1].nil? then true else false end |
                2-Bedroom Unfurnished
              %li
                = radio_button_tag 'apartment_application[preference_1]', 'Evergreen-3',             |
                  if @apartment_application[:preference_1] == "Evergreen-3" then true else false end |
                3-Bedroom Unfurnished
              %li
                %strong Southern Hills
              %li
                = radio_button_tag 'apartment_application[preference_1]', 'Southern-Eff',             |
                  if @apartment_application[:preference_1] == "Southern-Eff" then true else false end |
                Efficiency Furnished
              %li
                = radio_button_tag 'apartment_application[preference_1]', 'Southern-1',             |
                  if @apartment_application[:preference_1] == "Southern-1" then true else false end |
                1-Bedroom Furnished
              %li
                = radio_button_tag 'apartment_application[preference_1]', 'Southern-2',             |
